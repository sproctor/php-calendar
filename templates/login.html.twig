{% extends "base.html.twig" %}

{% block body %}
        <form action="{{ script }}" method="post">
            <h2>{{ "log-in-label"|trans }}</h2>
            <div class="form-group">
                <label for="username">{{ "username-label"|trans }}</label>
                <input type="text" class="form-control" name="username" id="username">
            </div>
            <div class="form-group">
                <label for="password">{{ "password-label"|trans }}</label>
                <input type="password" class="form-control" name="password" id="password">
            </div>
            {% if lasturl is defined %}<input type="hidden" name="lasturl" value="{{ lasturl }}">{% endif %}
            <input type="hidden" name="action" value="login">
            <button type="submit" class="btn btn-primary">{{ 'log-in-button'|trans }}</button>
        </form>
{% endblock %}
