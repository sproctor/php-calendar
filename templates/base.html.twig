<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}PHP Calendar{% endblock %}</title>

    <link rel="icon" href="{{ asset('static/office-calendar.png') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('static/phpc.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            {% if calendar is defined %}
                {% set calendars = get_calendars() %}
                {% if calendars|length > 1 %}
                    <div class="nav-item dropdown">
                        <button class="btn btn-link navbar-brand dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">{{ calendar.title }}</button>
                        <div class="dropdown-menu">
                            {% for cal in calendars %}
                                <a class="dropdown-item" href="{{ path('default_view', {cid: cal.cid}) }}">{{ cal.title }}</a>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <a class="navbar-brand" href="{{ path('default_view', {cid: calendar.cid}) }}">{{ calendar.title }}</a>
                {% endif %}
            {% endif %}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#phpc-navbar"
                    aria-controls="phpc-navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="phpc-navbar">
                <ul class="navbar-nav mr-auto">
                    {% if calendar is defined %}
                        {% if can_create(calendar.cid, app.user) %}
                            {{ menu_item("create_event", "create-event-label"|trans, 'plus', {cid: calendar.cid}) }}
                        {% endif %}
                        {% if app.current_route != 'month_view' and app.current_route != 'default_view' and date is defined %}
                            {{ menu_item("month_view", "view-month-menu-link"|trans, 'eye', {cid: calendar.cid, month: date|month, year: date|year}) }}
                        {% endif %}
                        {% if app.current_route == "display_event" %}
                            {{ menu_item("display_day", "view-date-menu-link"|trans, 'eye') }}
                        {% endif %}
                    {% endif %}
                    {% if app.user and app.user.isAdmin %}
                        {{ menu_item("admin", "admin-menu-link"|trans, 'gear') }}
                    {% endif %}
                    <li class="nav-item dropdown">
                        <button class="btn btn-link nav-link dropdown-toggle" type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"><i class="bi-translate"></i>
                            {{ "language-menu-selector"|trans }}
                        </button>
                        <div class="dropdown-menu">
                            {% for code,lang in languages %}
                                <a class="dropdown-item"
                                   href="{{ change_locale(code) }}">{{ lang }}</a>
                            {% endfor %}
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <button class="btn btn-link nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false"><i class="bi-person"></i>
                            {% if app.user is null %}
                                {{ "anonymous"|trans }}
                            {% else %}
                                {{ app.user.username }}
                            {% endif %}
                        </button>
                        <div class="dropdown-menu">
                            {% if not app.user is null %}
                                <a class="dropdown-item" href="{{ path("user_settings") }}"><i
                                            class="bi-gear"></i> {{ "settings-menu-link"|trans }}</a>
                                <a class="dropdown-item" href="{{ path("app_logout") }}"><i
                                            class="bi-bow-arrow-right"></i> {{ "log-out-menu-link"|trans }}</a>
                            {% else %}
                                <a class="dropdown-item"
                                   href="{{ path("app_login", { target_path: app.request.requestUri }) }}"><i
                                            class="bi-box-arrow-in-right"></i> {{ "log-in-menu-link"|trans }}</a>
                            {% endif %}
                        </div>
                    </li>
                </ul>
                {% if calendar is defined %}
                <form class="d-flex" role="search" action="{#  { context.createUrl('search') } #}" method="post">
                    <div class="input-group">
                        <input id="search-input" class="form-control" name="query" type="search"
                               placeholder="{{ "search-label"|trans }}" aria-label="{{ "search-label"|trans }}">
                        <button class="btn btn-primary" title="{{ "search-label"|trans }}" type="submit">
                            <i class="bi-search"></i>
                        </button>
                    </div>
                </form>
                {% endif %}
            </div>
        </div>
    </nav>

{% if messages is defined %}
    {% for message in messages %}
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endif %}

<div class="phpc-body container-fluid">
    {% block body %}{% endblock %}
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/3.0.5/purify.min.js"
        integrity="sha512-KqUc2WMPF/gxte9xVjVE4TIt1LMUTidO3BrcItFg0Ro24I7pGNzgcXdnWdezNY+8T0/JEmdC79MuwYn+8UdOqw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/marked/5.1.1/marked.min.js"
        integrity="sha512-geNSPsVaubOv19D7VZY9lJH7MNdRkIq84doaoubf6zknjXsyBQ77XQbqiHX89Mg3e+67E16huocEGUlR4Pgjtg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<!-- TODO: remove JQuery dependence -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="{{ asset('static/phpc.js') }}"></script>

{% block script %}{% endblock %}

