{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label" for="username">{{ 'username-label'|trans }}</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-2 col-form-label" for="password">{{ 'password-label'|trans }}</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
        </div>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="{{ target_path }}"/>

        <button class="btn btn-primary mb-3" type="submit">login</button>
    </form>
{% endblock %}
